<div class="py-3 border-bottom comment comment-<%= comment.id%>">
    <p><%= comment.body %></p>
    <small class="d-inline-block mb-3 text-secondary border-bottom">Posted <%= time_ago_in_words(comment.created_at) %> ago by by <%= comment.user.username %></small>
    <div class="btn-group">
        <%= link_to "Edit", edit_article_comment_path(comment.article, comment), class: "btn btn-light" %>
        <%= link_to "Delete", article_comment_path(comment.article, comment), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-dark" %>
    </div>
</div>