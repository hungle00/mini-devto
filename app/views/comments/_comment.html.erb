<div class="py-3 border-bottom comment comment-<%= comment.id%>">
    <small class="d-inline-block mb-3 text-secondary border-bottom">Posted <%= time_ago_in_words(comment.created_at) %> ago.</small>
    <p><%= comment.body %></p>
    <div class="btn-group">
        <%= link_to "Edit Comment", edit_article_comment_path(comment.article, comment), class: "btn btn-sm btn-outline-primary" %>
        <%= link_to "Delete Comment", article_comment_path(comment.article, comment), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
    </div>
</div>