<%= simple_form_for([@article, @comment], remote: true, data: { action: "ajax:success->comments#createSuccess", 'comments-target': "commentBody" }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :body %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
