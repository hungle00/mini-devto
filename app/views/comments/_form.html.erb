<%= simple_form_for([@article, comment], class: "contents") do |f| %>

<%= turbo_frame_tag :notice %>

  <div class="form-inputs">
    <%= f.input :body , label: 'Comment'%>
  </div>

  <div class="form-actions my-2">
    <% if controller.action_name == 'edit' %>
      <%= f.button :submit, class: "btn btn-sm btn-outline-primary" %>
      <%= link_to 'Back', @article, class: 'btn btn-sm btn-outline-danger' %>
    <% else %>
      <%= f.button :submit, class: "btn btn-outline-primary" %>
    <% end %>
  </div>
<% end %>
