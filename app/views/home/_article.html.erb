<div class="card border-top border-left-0 rounded-0" id="article-<%= article.id %>">
  <div class="row g-0">
    <div class="col-sm-1 d-flex justify-content-center align-items-center">
      <%= avatar_for article.user, options = { size: 50 } %>
    </div>
    <div class="col-sm-11">
      <div class="card-body">
        <h4 class="card-title"><%= link_to highlight(article.title, params[:search]), article %></h4>
        <p class="card-text"><i><%= truncate(article.body.to_plain_text, length: 60) %></i></p>
        <p class="card-text">
          <small class="text-muted"><%= link_to article.user.username, profile_path(article.user) %> posted: updated 3 mins ago</small>
        </p>
        <div class="card-text">
          <%= article.created_at.strftime("%b %d") %> | 
          <% if current_user.saved?(article) %>
            <%= link_to '<i class="fa fa-bookmark"></i>'.html_safe, article_clip_path(article), method: :delete %>
          <% else %>
            <%= link_to '<i class="fa fa-bookmark"></i>'.html_safe, article_clip_path(article), method: :post %>
          <% end %>
        </div> 
      </div>
    </div>
  </div>
</div>
