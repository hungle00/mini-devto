<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-8">
    <h2>
      <strong><%= @article.title %></strong>    
    </h2>

    <p>
      <strong>Author</strong>
      <i><%= link_to @author, profile_path(@author) %></i>
    </p>

    <p>
      <strong>Body:</strong>
      <%= @article.body %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @article.description %>
    </p>

    <br>

    <div class="card mb-3">
      <%# NOTE COMMENT STEP 3: Wrap the comments in `<div id="comments">` so that you can select the wrapper when using javascript in `app/views/comments/create.js.erb`. %>
      <div id="comments" class="card-body">
        <%= render @article.comments %>
      </div>
    </div>

    <div class="card mb-3">
        <div class="card-header">
          <h4>Add A Comment:</h4>
        </div>
        <div class="card-body">
            <%# NOTE COMMENT STEP 3: Load the comment form. %>
          <%= render "comments/form" %>
        </div>
    </div>

    <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-secondary' %> |
    <%= link_to 'Back', articles_path, class: 'btn btn-light' %>
  </div>

  <div class="col-sm-4">
    <div>
      <p><i>Upvote: <%= @article.favorites_count %></i><p>
      <%= link_to "Up", article_favorite_path(@article), remote: true, method: :post, class: 'btn btn-sm btn-outline-primary' %>
      <%= link_to "Down", article_favorite_path(@article), remote: true, method: :delete, class: 'btn btn-sm btn-outline-danger' %>
    </div>

    <p><strong>Tags</strong></p>
    <ul>
      <% @article.tag_list.each do |tag| %>
        <li><%= link_to tag, tagged_path(tag: tag) %></li>
      <% end %>
    </ul>

    <p><strong>Articles same tag</strong></p>
    <ul data-controller="relative"
        data-relative-target="articles"
        data-relative-url-value="<%= relative_article_path(@article) %>">
    </ul>

  </div>
</div>
