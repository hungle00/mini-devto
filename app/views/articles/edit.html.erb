<div data-controller ="composer" class="row">
  <div class="col-8">
    <h2>Edit Article</h2>
    <%= render 'form', article: @article %>
    <%= link_to 'Show', @article %> | <%= link_to 'Back', articles_path %>
  </div>
  <div class="col-4 px-2 border-left">
    <div class="d-grid gap-2 mb-4">
        <button data-action="click->composer#preview"
            class="btn btn-light">Preview Content</button>
    </div>
    <div data-composer-target="output"></div>
  </div>
</div>
